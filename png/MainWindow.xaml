<Window x:Class="img_to_db.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:img_to_db"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox 
            ItemsSource="{Binding}"
            x:Name="idimg" 
            HorizontalAlignment="left"           
            VerticalAlignment="Center" 
            Width="178" Height="20"
            DisplayMemberPath="name" 
            SelectedValuePath="id" 
            IsTextSearchEnabled="False" 
            IsEditable="True"  
        />
        <Button Content="Button" Click="add" HorizontalAlignment="Left" Margin="620,215,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="w" Click="view" HorizontalAlignment="Left" Margin="620,265,0,0" VerticalAlignment="Top" Width="75"/>
        <Image x:Name="pick"  HorizontalAlignment="Left" Height="276" Margin="263,77,0,0" VerticalAlignment="Top" Width="306"/>
        <TextBox x:Name="flop" Height="26"  TextWrapping="Wrap" Text="имя" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Width="186" Margin="0,184,0,209" />
    </Grid>
</Window>
